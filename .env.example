# Database
DATABASE_URL=postgresql+asyncpg://mecano:mecano@localhost:5432/mecano

# Redis
REDIS_URL=redis://localhost:6379

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=mecano_chunks

# MinIO / S3
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=mecano-documents
S3_REGION=us-east-1

# OpenAI
OPENAI_API_KEY=sk-your-key-here

# Embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# LLM
LLM_MODEL=gpt-4o-mini
LLM_MAX_TOKENS=4096

# Chunking
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# App
DEBUG=true
LOG_LEVEL=INFO

# Dev mode: bypass Clerk auth (set to false in production)
DEV_AUTH_BYPASS=true

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_xxx
CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_JWKS_URL=https://xxx.clerk.accounts.dev/.well-known/jwks.json

# Stripe Billing
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRO_PRICE_ID=price_xxx

# Free tier quotas
FREE_DAILY_CHAT_LIMIT=100
FREE_MAX_FILES=5

# --- Nango (OAuth connector management) ---
NANGO_URL=http://localhost:3003
NANGO_SECRET_KEY=nango-dev-secret-key
NANGO_PUBLIC_KEY=nango-dev-public-key
NANGO_ENCRYPTION_KEY=GENERATE_WITH_python3_-c_"import base64,os;print(base64.b64encode(os.urandom(32)).decode())"

# --- CopilotKit ---
COPILOTKIT_RUNTIME_URL=http://localhost:4000
COPILOT_LLM_MODEL=gpt-4o-mini
